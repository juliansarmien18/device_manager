					"response": []
				},
				{
					"name": "Crear Dispositivo",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Mi Nuevo Dispositivo\",\n    \"ip_address\": \"192.168.1.100\",\n    \"is_active\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/devices/",
							"host": ["{{base_url}}"],
							"path": ["devices", ""]
						}
					},
					"response": []
				},
				{
					"name": "Obtener Detalle de Dispositivo",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/devices/1/",
							"host": ["{{base_url}}"],
							"path": ["devices", "1", ""]
						}
					},
					"response": []
				},
				{
					"name": "Actualizar Dispositivo",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Dispositivo Actualizado\",\n    \"is_active\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/devices/1/",
							"host": ["{{base_url}}"],
							"path": ["devices", "1", ""]
						}
					},
					"response": []
				},
				{
					"name": "Toggle Estado Activo",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/devices/1/toggle_active/",
							"host": ["{{base_url}}"],
							"path": ["devices", "1", "toggle_active", ""]
						}
					},
					"response": []
				},
				{
					"name": "Eliminar Dispositivo",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/devices/1/",
							"host": ["{{base_url}}"],
							"path": ["devices", "1", ""]
						}
					},
					"response": []
				},
				{
					"name": "Buscar Dispositivos",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/devices/?search=Dispositivo",
							"host": ["{{base_url}}"],
							"path": ["devices", ""],
							"query": [
								{
									"key": "search",
									"value": "Dispositivo"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Ordenar Dispositivos",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/devices/?ordering=-created_at",
							"host": ["{{base_url}}"],
							"path": ["devices", ""],
							"query": [
								{
									"key": "ordering",
									"value": "-created_at"
								}
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		}
	]
}
